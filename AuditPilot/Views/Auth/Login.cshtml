@model SCardApp.Models.UserMaster

@using (Html.BeginForm("Login", "UserMaster", FormMethod.Post))
{
   // @Html.AntiForgeryToken()
    @Html.HiddenFor(s => s.ReturnURL)

<div>
    @if (TempData["ErrorMSG"] != null)
    {
        <label style="color:maroon;"> @TempData["ErrorMSG"] </label><br />
    }
    <div class="row">
        <div class="col-xs-3">
            <b>User Name</b>
            @Html.TextBoxFor(s => Model.UserName, new { @placeholder = "Username" })
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <b>Password</b>
            @Html.PasswordFor(Model => Model.PCode, new { htmlAttributes = new { @class = "form-control" , @placeholder = "Password" } })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-xl-5">
            &nbsp;&nbsp;&nbsp;&nbsp;<button type="submit">&nbsp;&nbsp;Login&nbsp;&nbsp;</button>
        </div>
        </div>

        @*<br />@Html.CheckBoxFor(s => s.isRemember) Remember ME*@
    </div>
    }

